{
  "name": "professional-portfolio",
  "version": "1.0.0",
  "description": "Professional digital portfolio showcasing cloud engineering, cybersecurity, and API development expertise",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:simple": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .js,.html",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "deploy:build": "npm run validate && npm run build",
    "deploy:netlify": "node scripts/deploy.js netlify",
    "deploy:vercel": "node scripts/deploy.js vercel",
    "deploy:github": "node scripts/deploy.js github",
    "serve": "vite preview --port 3000",
    "optimize": "node scripts/optimize-assets.js",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "echo 'Setup complete! Run npm run dev to start development.'"
  },
  "keywords": [
    "portfolio",
    "cloud-engineering",
    "cybersecurity",
    "api-development",
    "professional"
  ],
  "author": "Professional Portfolio",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0",
    "rollup-plugin-visualizer": "^5.0.0",
    "gh-pages": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}